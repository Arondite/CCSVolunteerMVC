
@{
	ViewBag.Title = "In or Out";
	///This screen is for the use of the volunteers to help process of clocking in and out
	///This gives the option to end the day for the kiosk which is validated by the admin sign in
	///If admin signs out, it automatically clock everyone left out for the volunteer duration of an hour
	App.Admin = 3;
	if(IsPost)
	{
		App.Admin = 1;
		var endTerminal = Request["EndTerminal"];
		if (endTerminal == "EndTerminal")
		{
			Response.Redirect("~/Kiosk/KioskExit");			
		}
	}
}

<h2 class="jumbotron text-center">Please select whether you are clocking in or out</h2>
<div>
	<form action="@Url.Action("VolunteerGroup", "Kiosk", new { action = "" })" method="post" class="form-horizontal" id="login">
		<div class="col-sm-offset-3 col-sm-10">
			<input class="btn btn-primary btn-lg btn-block" name="In" type="submit" id="In" formmethod="POST" title="In" value="In">
			<input class="btn btn-secondary btn-lg btn-block" name="Out" type="submit" id="Out" formmethod="POST" title="Out" value="Out">
		</div>
	</form>
	<form action="" method="post" class="form-horizontal" id="logout">
		<div class="col-sm-offset-3 col-sm-10">
			<input class="btn btn-danger btn-lg btn-block" name="EndTerminal" type="submit" id="EndTerminal" formmethod="POST" title="Out" value="EndTerminal">
		</div>
	</form>
</div>